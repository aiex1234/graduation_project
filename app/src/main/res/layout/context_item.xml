<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="80dp"
    android:layout_marginTop="20dp"
    android:maxHeight="80dp">


    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp" />


    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="90dp"
        android:text="title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_item_price1"
        android:layout_marginLeft="90dp"
        android:text="가격:"
        android:layout_below="@+id/tv_item_title"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_item_price2"
        android:layout_alignLeft="@+id/tv_item_price1"
        android:layout_marginLeft="30dp"
        android:text="price"
        android:layout_below="@+id/tv_item_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_item_phone"
        android:layout_marginLeft="90dp"
        android:text="전화번호:"
        android:layout_below="@+id/tv_item_price1"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_item_phone2"
        android:layout_alignLeft="@+id/tv_item_phone"
        android:layout_marginLeft="60dp"
        android:text="number"
        android:layout_below="@+id/tv_item_price2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_item_time"
        android:layout_marginLeft="90dp"
        android:text="몇분전"
        android:layout_below="@+id/tv_item_phone"/>

    <TextView
        android:id="@+id/tv_item_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="16dp"
        android:text="9999.12.31 12:00"
        android:textColor="@android:color/darker_gray"
        android:textSize="9dp"
        android:gravity="right"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:background="#fef01b"
        android:text="대화하기"
        android:textColor="#8b4513"
        android:textStyle="bold|normal"
        android:id="@+id/btn_chat"/>

</RelativeLayout>
